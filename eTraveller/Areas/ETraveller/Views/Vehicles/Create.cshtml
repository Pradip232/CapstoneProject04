@model eTraveller.Models.Vehicle

@{
    ViewData["Title"] = "Create";
}
@section BodyStyle{
    <style>
        body {
            background-image: url('https://www.freeppt7.com/uploads/190910/1-1Z910195K0P7.JPG');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center center;
        }
    </style>
}

<h1>Add new vehicle</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VehicleName" class="control-label"></label>
                <input asp-for="VehicleName" class="form-control" />
                <span asp-validation-for="VehicleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CostPerKm" class="control-label"></label>
                <input asp-for="CostPerKm" class="form-control" />
                <span asp-validation-for="CostPerKm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Maintainance" class="control-label"></label>
                <input asp-for="Maintainance" class="form-control" />
                <span asp-validation-for="Maintainance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<br />

<div>
    <a class="btn btn-success" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
